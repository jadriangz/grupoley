<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <template id="l10n_mx_edi_addenda_casa_ley" name="Addenda Casa Ley">
            <t t-set="sale_model" t-value="'sale_line_ids' in record.invoice_line_ids._fields"/>
            <t t-set="sale_id"
               t-value="record.mapped('invoice_line_ids.sale_line_ids.order_id') if sale_model else False"/>
            <cley:ADDENDA_CLEY
                    VERSION="1.0"
                    xmlns:cley="http://servicios.casaley.com.mx/factura_electronica"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"                    
                    CORREO="Facturacion@laguacamaya.com"
                    xsi:SchemaLocation="http://servicios.casaley.com.mx/factura_electronica http://servicios.casaley.com.mx/factura_electronica/XSD_ADDENDA_CASALEY.xsd">
                <cley:MERCADERIAS>

                    <!-- Valores para relacionar el nombre de como nos conoce el cliente y su centro/tienda -->
                    <t t-set="customer_seller" t-value=""/>
                    <t t-set="center" t-value=""/>                    

                    <!-- Ciclo para para obtener el nombre de como nos conoce el cliente y su centro/tienda -->
                    <t t-foreach="sale_id.order_line.product_id.seller_ids" t-as="l">
                        <t t-if="sale_id.partner_id == l.name">
                            <t t-set="customer_seller" t-value="l.x_customer_seller"/>
                            <t t-set="center" t-value="l.x_center"/>                            
                        </t>
                    </t>

                    <!-- Ciclo para obtener el descuento total -->
                    <t t-set="total_without_disc" t-value="0.00"/>
                    <t t-foreach="sale_id.order_line" t-as="b">
                        <t t-set="product_total" t-value="b.price_unit * b.qty_invoiced"/>
                        <t t-set="total_without_disc" t-value="total_without_disc + product_total"/>
                    </t>
                    
                    <!-- Descuento total -->
                    <t t-set="desc" t-value="total_without_disc - sale_id.amount_untaxed"/>

                    <cley:PA t-att-DESCUENTO="round(desc, 2)" t-att-NO_REMISION="7" PROVEEDOR-SAP="000R104704" t-att-FECHA_ENTRADA="record.x_delivery_reference_date"
                             t-att-NUMERO_ENTRADA="record.x_delivery_reference" t-att-CENTRO="center" t-att-PROVEEDOR="customer_seller"/>
                    
                    <!-- Iteradores y contenedores -->
                    <t t-set="i" t-value="1"/>
                    <t t-set="partner_name" t-value=""/>
                    <t t-set="product_name" t-value=""/>
                    <t t-set="product_code" t-value=""/>
                    <t t-set="uom" t-value=""/>
                    
                    <!-- Obtener la unidad de medida dada por el cliente -->
                    <t t-foreach="sale_id.order_line" t-as="o">
                        
                        <t t-if="sale_id.order_line.product_id.seller_ids">
                                
                                <t t-foreach="sale_id.order_line.product_id.seller_ids" t-as="t">

                                    <t t-set="partner_name" t-value="t.name"/>
                                    <t t-set="product_name" t-value="t.product_tmpl_id.display_name"/>
                                    <t t-if="partner_name == sale_id.partner_id">
                                        <t t-if="product_name == o.product_id.display_name">
                                            <t t-set="uom" t-value="t.x_uom"/>                                            
                                        </t>
                                    </t>
                                </t>                                
                        </t>
                        
                        <!-- Detalle del pedido -->
                        <cley:DETALLE DESCUENTO="0.00" TASA_IEPS="0" IMPUESTO_IEPS="0.00"
                                      TASA_IVA="0" t-att-IMPUESTO_IVA="o.tax_id.amount"
                                      t-att-PRECIO_LISTA="o.price_unit" t-att-UMC="uom"
                                      t-att-CANTIDAD="o.qty_invoiced" t-att-RENGLON="i">
                            
                            <t t-set="i" t-value="i+1"/>
                            <cley:CODBAR_ARTICULO t-att-COD_BAR="o.product_id.barcode"/>
                            
                            <!-- Obtenemos el codigo del producto dado por el cliente -->
                            <t t-if="sale_id.order_line.product_id.seller_ids">
                                
                                <t t-foreach="sale_id.order_line.product_id.seller_ids" t-as="p">

                                    <t t-set="partner_name" t-value="p.name"/>
                                    <t t-set="product_name" t-value="p.product_tmpl_id.display_name"/>
                                    <t t-if="partner_name == sale_id.partner_id">
                                        <t t-if="product_name == o.product_id.display_name">
                                            <t t-set="product_code" t-value="p.product_code"/>                         
                                            <cley:CLEY_ARTICULO t-att-COD_ARTICULO="product_code"/>
                                        </t>
                                    </t>
                                </t>                                
                            </t>                            
                             
                            
                        </cley:DETALLE>
                    </t>
                </cley:MERCADERIAS>
            </cley:ADDENDA_CLEY>
        </template>

        <record id="l10n_mx_edi_addenda_casa_ley" model="ir.ui.view">
            <field name="l10n_mx_edi_addenda_flag">True</field>
        </record>
    </data>
</odoo>