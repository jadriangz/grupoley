<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
  <data>
    <template id="l10n_mx_edi_addenda_chedrahui" name="Addenda Chedrahui">
      <t t-set="sale_model" t-value="'sale_line_ids' in record.invoice_line_ids._fields"/>
      <t t-set="sale_id" t-value="record.mapped('invoice_line_ids.sale_line_ids.order_id') if sale_model else False"/>
    <requestForPayment
            t-att-DeliveryDate="sale_id.effective_date"
            documentStatus="ORIGINAL"
            documentStructureVersion="AMC7.1"
            contentVersion="1.3.1"
            type="SimpleInvoiceType"
    >
        <requestForPaymentIdentification>
            <entityType t-esc="INVOICE"/>
            <uniqueCreatorIdentification t-esc="record.payment_reference"/>
        </requestForPaymentIdentification>

        <specialInstruction code="ZZZ">
            <text t-esc="record._l10n_mx_edi_cfdi_amount_to_text()"/>
        </specialInstruction>

        <orderIdentification>
            <referenceIdentification type="ON" t-esc="record.x_order_reference"/>
            <ReferenceDate t-esc="record.x_order_reference_date"/>
        </orderIdentification>

        <AdditionalInformation>
            <referenceIdentification type="ATZ" t-esc="record.x_additional_reference"/>
        </AdditionalInformation>

        <DeliveryNote>
            <referenceIdentification t-esc="record.x_delivery_reference"/>
            <referenceDate t-esc="record.x_delivery_reference_date"/>
        </DeliveryNote>

        <buyer>
            <gln t-esc="record.partner_id.x_gln"/>
        </buyer>
        
        
        <!-- Valores para relacionar el nombre de como nos conoce el cliente y su centro/tienda -->
        <t t-set="customer_seller" t-value=""/>
        
        <!-- Ciclo para para obtener el nombre de como nos conoce el cliente y su centro/tienda -->
        <t t-if="record.invoice_line_ids.product_id.seller_ids">
            <t t-foreach="record.invoice_line_ids.product_id.seller_ids" t-as="l">
                <t t-if="record.partner_id == l.name">
                    <t t-set="customer_seller" t-value="l.x_customer_seller"/>                                           
                </t>
            </t>
        </t>
        
        <t t-if="sale_id.order_line.product_id.seller_ids">
            <t t-foreach="sale_id.order_line.product_id.seller_ids" t-as="l">
                <t t-if="sale_id.partner_id == l.name">
                    <t t-set="customer_seller" t-value="l.x_customer_seller"/>                                           
                </t>
            </t>
        </t> 
        

        <seller>
            <gln t-esc="record.company_id.partner_id.x_gln"/>
            <alternatePartyIdentification type="SELLER_ASSIGNED_IDENTIFIER_FOR_A_PARTY" t-esc="customer_seller"/>
        </seller>

        <shipTo>
            <gln t-esc="record.partner_shipping_id.x_gln"/>
            <NameAndAddress>
                <name t-esc="record.partner_id.name"/>
                <streetAddressOne t-esc="record.partner_id.street_name + ' ' + record.partner_id.street_number"/>
                <city t-esc="record.partner_id.city_id.name + ' ' + record.partner_id.state_id.code"/>
                <postalCode t-esc="record.partner_id.zip"/>
            </NameAndAddress>
        </shipTo>

        <currency t-att-currencyISOCode="record.currency_id.name">
            <currencyFunction t-esc="BILLING_CURRENCY"/>
            <rateOfChange t-field="sale_id.currency_rate"/>
        </currency>

        <paymentTerms PaymentTermsRelationTime="REFERENCE_AFTER"
                      paymentTermsEvent="DATE_OF_INVOICE">
            <netPayment netPaymentTermsType="BASIC_NET">
                <paymentTimePeriod>
                    <timePeriodDue timePeriod="DAYS"/>
                </paymentTimePeriod>
            </netPayment>
        </paymentTerms>

        <t t-set="i" t-value="1"/>
        <t t-set="partner_name" t-value=""/>
        <t t-set="product_name" t-value=""/>
        <t t-set="uom" t-value=""/>
        
        <t t-foreach="record.invoice_line_ids" t-as="o">
            <lineItem type="SimpleInvoiceLineItemType" t-att-number="i">
                <tradeItemIdentification>
                    <gtin t-esc="o.product_id.barcode"/>
                    <t t-set="i" t-value="i+1"/>
                </tradeItemIdentification>

                <tradeItemDescriptionInformation language="ES">
                    <longText t-esc="o.product_id.name"/>
                </tradeItemDescriptionInformation>
                
                
                <t t-if="record.invoice_line_ids.product_id.seller_ids">
                    <t t-foreach="record.invoice_line_ids.product_id.seller_ids" t-as="t">
                        <t t-set="partner_name" t-value="t.name"/>
                        <t t-set="product_name" t-value="t.product_tmpl_id.display_name"/>
                        <t t-if="partner_name == record.partner_id">
                            <t t-if="product_name == o.product_id.display_name">
                                <t t-set="uom" t-value="t.x_uom"/>                                            
                            </t>
                        </t>
                    </t>
                </t>
                
                <t t-if="sale_id.order_line.product_id.seller_ids">
                    <t t-foreach="sale_id.order_line.product_id.seller_ids" t-as="t">
                        <t t-set="partner_name" t-value="t.name"/>
                        <t t-set="product_name" t-value="t.product_tmpl_id.display_name"/>
                        <t t-if="partner_name == sale_id.partner_id">
                            <t t-if="product_name == o.product_id.display_name">
                                <t t-set="uom" t-value="t.x_uom"/>                                            
                            </t>
                        </t>
                    </t>
                </t>
                

                <invoiceQuantity t-att-unitOfMeasure="uom" t-esc="o.quantity"/>

                <additionalQuantity QuantityType="NUM_CONSUMER_UNITS" t-esc="o.product_uom_id.factor_inv"/>

                <grossPrice>
                    <Amount t-esc="o.price_unit"/>
                </grossPrice>

                <netPrice>
                    <Amount t-esc="round(o.price_subtotal / o.quantity,2)"/>
                </netPrice>

                <totalLineAmount>
                    <grossAmount>
                        <Amount t-esc="round(o.price_unit * o.quantity,2)"/>
                    </grossAmount>

                    <netAmount>
                        <Amount t-esc="o.price_subtotal"/>
                    </netAmount>

                </totalLineAmount>
            </lineItem>
        </t>

        <t t-set="total_without_disc" t-value="0.00"/>
        <t t-foreach="record.invoice_line_ids" t-as="b">
            <t t-set="product_total" t-value="b.price_unit * b.quantity"/>
            <t t-set="total_without_disc" t-value="total_without_disc + product_total"/>
        </t>

        <totalAmount>
            <Amount t-esc="round(total_without_disc,2)"/>
        </totalAmount>

        <totalAllowenceCharge allowenceOrChargeType="ALLOWANCE">
            <t t-set="total_allowance_charge" t-value="total_without_disc - record.amount_untaxed"/>
            <Amount t-esc="round(total_allowance_charge,2)"/>
        </totalAllowenceCharge>

        <baseAmount>
            <Amount t-esc="record.amount_untaxed"/>
        </baseAmount>

        <tax type="VAT">
            <taxPercentage t-esc="record.invoice_line_ids.tax_ids.amount"/>
            <taxAmount t-esc="record.amount_tax"/>
        </tax>

        <payableAmount>
            <Amount t-esc="record.amount_total"/>
        </payableAmount>

    </requestForPayment>
    </template>

    <record id="l10n_mx_edi_addenda_chedrahui" model="ir.ui.view">
            <field name="l10n_mx_edi_addenda_flag">True</field>
    </record>
  </data>
</odoo>