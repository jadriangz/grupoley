<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_order_form_disable_button" model="ir.ui.view">
            <field name="name">stock.order.form.disable.button</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_validate'][hasclass('oe_highlight')]" position="attributes">
                    <attribute name="attrs">{'invisible':['|',('picking_type_code','=','internal'),('show_validate', '!=', True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='button_validate'][hasclass('o_btn_validate')]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('picking_type_code','=','internal'),('show_validate', '!=', True),('user_id.', '=', user.id)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>