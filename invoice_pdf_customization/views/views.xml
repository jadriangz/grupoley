        <template id="report_footer_invoice_inherit" inherit_id="l10n_mx_edi.report_invoice_document_mx">
            <xpath expr="//p[@t-if='o.narration']" position="after">
                <div class="footer_custom container text-center" style="border: 1px solid; padding: 20px; border-radius: 25px;">
                    <t t-set="footer_values" t-value="o.get_footer_values()"></t>

                    <div id="footer_first_section" class="row">
                        <div t-attf-class="#{'col-12' if report_type != 'html' else 'col-sm-10 col-md-12'} ml-auto">
                            <div>
                                <div class="row">
                                    <t t-esc="footer_values['promissory_note']"/>
                                </div>
                                <br/>
                                <div class="row">
                                    <b><t t-esc="footer_values['reiterate']"/></b>
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="col-6 text-left">
                                        <div class="text-center">AVAL</div>
                                        <div>
                                            <div>
                                                <span t-field="o.partner_id.name"/>,
                                            </div>
                                            <div>
